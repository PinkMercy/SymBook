{% block body %}
	<h1>liste des users</h1>
	<table border="1" class="table">
		<tr>
			<th>id :</th>
			<th>titre :</th>
			<th>isbn :</th>
			<th>editeur :</th>
			<th>dateedition :</th>
			<th>prix :</th>
			<th>detail</th>
			<th>supprimer</th>
			<th>edit</th>
		</tr>
		{% for livre in livres %}
			<tr>
<th>
					{{livre.id}}
				</th>
				<th>
					{{livre.titre|title}}
				</th>
				<th>
					{{livre.isbn}}
				</th>
				<th>
					{{livre.editeur}}
				</th>
				<th>
					{{livre.editedAt|date('d/m/Y')}}
				</th>
				<th>
					{{livre.prix}}
				</th>
				<th>
					<a href="{{url('admin_livres_show',{'id':livre.id})}}">voir detail</a>
				</th>
				<th>
					<a href="#" type="button" class="btn btn-danger">supprimer</a>
				</th>
				<th>
					<a href="#" type="button" class="btn btn-primary">edit</a>
				</th>
			</tr>
		{% endfor %}

	</table>
{% endblock %}
